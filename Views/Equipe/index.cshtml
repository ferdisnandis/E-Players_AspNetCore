@model Equipe
@{
    ViewData["Title"] = "Equipes";
}
<form method="POST" action='@Url.Action("Cadastrar")' enctype="multipart/form-data">
    <label for="IdEquipe">IdEquipe</label>
    <input type="text" name="IdEquipe" id="IdEquipe">

    <label for="Nome">Nome</label>
    <input type="text" name="Nome" id="Nome">

    <label for="Imagem">Imagem</label>
    <input type="file" name="Imagem" id="Imagem">

    <button type="submit">Cadastrar</button>
</form>

<table class="table table-responsive table-striped">
    <thead>
        <th>Id</th>
        <th>Nome</th>
        <th>Imagem</th>
    </thead>
    <body>
        @foreach (var item in ViewBag.Equipes)
        {
            <tr>
                <td>@item.IdEquipe</td>
                <td>@item.Nome</td>
                <td><img src="img/Equipes/@item.Imagem" alt="Imagem da equipe @item.Nome" width="40"></td>
                <td><a asp-area="" asp-controller="Equipe" asp-action="Excluir" asp-route-id="@item.IdEquipe">Excluir</a></td>
            </tr>
        }
    </body>
</table>